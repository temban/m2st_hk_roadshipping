<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="user_sign_up" name="User Sign Up" inherit_id="portal.placeholder_user_sign_up">
        <xpath expr="." position="inside">
            <li groups="base.group_public" t-attf-class="#{_item_class} o_no_autohide_item">
                <a t-attf-href="/sign-up" t-attf-class="#{_link_class}">Sign up<span t-if="request.session.profile_session" class="text-danger fa fa-circle"/></a>
            </li>
        </xpath>
    </template>
</odoo>